{
  "name": "ficusjs-docs",
  "version": "1.0.0",
  "description": "Documentation for FicusJS",
  "scripts": {
    "build": "cross-env NODE_ENV=production eleventy --input=src --output=dist",
    "build:js": "run-p build:js:*",
    "build:js:main": "rollup -i src/assets/js/main.mjs -o dist/assets/js/main.mjs -f es -m -p \"terser={mangle: { keep_fnames: true, toplevel: true, module: true }}\" -p \"filesize={}\"",
    "build:js:search": "rollup -i src/assets/js/search.mjs -o dist/assets/js/search.mjs -f es -m -p \"terser={mangle: { keep_fnames: true, toplevel: true, module: true }}\" -p \"filesize={}\"",
    "build:search:index": "cross-env NODE_ENV=production node scripts/build-search-index.js",
    "postbuild": "mkdirp dist/assets/js && run-s build:* copy:* workbox:gen build:search:index",
    "clean": "rimraf dist",
    "copy:assets": "mkdirp dist/assets/img && ncp src/assets/img dist/assets/img",
    "copy:cname": "ncp CNAME.txt dist/CNAME",
    "copy:favicon": "ncp src/assets/img/favicon.ico dist/favicon.ico",
    "copy:apple-touch-icon": "ncp src/assets/img/apple-touch-icon.png dist/apple-touch-icon.png",
    "copy:manifest": "ncp src/ficus.webmanifest dist/ficus.webmanifest",
    "dev": "cross-env NODE_ENV=development eleventy --input=src --output=dist --serve",
    "predev": "npm run postbuild",
    "search:index": "node scripts/build-search-index.js",
    "start": "npm run dev",
    "workbox:gen": "workbox generateSW workbox-config.js"
  },
  "author": "Matt Levy",
  "devDependencies": {
    "@11ty/eleventy": "2.0.1",
    "@11ty/eleventy-plugin-syntaxhighlight": "5.0.0",
    "@ficusjs/renderers": "5.8.1",
    "@rollup/plugin-terser": "^0.4.3",
    "@svg-icons/fa-brands": "1.87.0",
    "@svg-icons/simple-icons": "1.86.0",
    "clean-css": "5.3.2",
    "concat-cli": "4.0.0",
    "cross-env": "7.0.3",
    "cssnano": "6.0.1",
    "eleventy-plugin-nesting-toc": "1.3.0",
    "ficusjs": "6.3.0",
    "glob-all": "3.3.1",
    "gray-matter": "4.0.3",
    "html-minifier": "4.0.0",
    "lunr": "2.3.9",
    "markdown-it": "13.0.1",
    "markdown-it-anchor": "8.6.7",
    "markdown-it-emoji": "2.0.2",
    "markdown-it-table-of-contents": "0.6.0",
    "markdown-it-named-headings": "1.1.0",
    "markdown-to-txt": "2.0.1",
    "mkdirp": "3.0.1",
    "ncp": "2.0.0",
    "npm-run-all": "4.1.5",
    "postcss": "8.4.27",
    "postcss-cli": "10.1.0",
    "rimraf": "5.0.1",
    "rollup": "3.27.1",
    "rollup-plugin-filesize": "10.0.0",
    "slugify": "1.6.6",
    "standard": "17.1.0",
    "striptags": "3.2.0",
    "terser": "5.20.0",
    "workbox-cli": "7.0.0"
  }
}
